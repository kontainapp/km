LABEL version="1.0" maintainer="Mark Sterin <msterin@kontain.app>"

RUN apt-get update; apt-get upgrade -y; \
    apt-get install -y make git libelf-dev gcc-8 curl; apt-get clean; ln -s `which gcc-8` /bin/cc
